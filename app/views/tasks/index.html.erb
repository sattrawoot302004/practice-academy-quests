<div class="min-h-screen bg-gray-50 py-4 px-3 flex flex-col items-center">
  <div class="w-full max-w-sm md:max-w-lg bg-white rounded-xl shadow-sm p-4 md:p-6 mt-4 border border-gray-100">
    
    <!-- Header -->
 <div class="text-center mb-6">
      <div class="w-20 h-20 md:w-24 md:h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full mx-auto mb-3 flex items-center justify-center">
        <%= image_tag "sattrawoot.jpg", alt: "SP", class: "w-18 h-18 md:w-22 md:h-22 rounded-full object-cover" %>
      </div>
      <h3 class="text-sm md:text-base text-gray-600 font-medium">Sattrawoot Parnemeng</h3>
      <h1 class="text-lg md:text-xl font-bold text-gray-900 mt-1">My Academy Quest</h1>
    </div>

    <!-- Brags Button -->
    <div class="mb-6">
      <%= link_to "Brags Document", brags_path, class: "block w-full text-center bg-gradient-to-r from-emerald-500 to-blue-500 hover:from-emerald-600 hover:to-blue-600 text-white font-medium py-2.5 px-4 rounded-xl text-sm transition-all duration-200" %>
    </div>

    <%= turbo_frame_tag "tasks_list" do %>
      <!-- Add Task Form -->
      <div class="bg-gray-50 rounded-xl p-3 mb-4">
        <%= form_with(model: @task, url: create_task_path, method: :post) do |form| %>
           <div class="space-y-3">
      <%= form.text_field :title, 
            placeholder: "Add new task...", 
            class: "w-full border-0 bg-white rounded-lg px-3 py-2.5 text-sm focus:outline-none focus:ring-2 transition-all #{'border-red-500 ring-2 ring-red-400' if @task.errors[:title].any?}", 
            data: { testid: "task-title-input" } %>
      <% if @task.errors[:title].any? %>
        <p class="flex items-center gap-1 text-red-500 text-xs"> <%= image_tag "error-svgrepo-com.svg", alt: "Error", class: "w-5 h-5" %>กรุณาระบุรายละเอียด</p>
      <% end %>
      <%= form.submit "Add Task", class: "w-full bg-blue-500 hover:bg-blue-600 text-white py-2.5 rounded-lg font-medium text-sm transition-all duration-200", data: { testid: "create-task-button" } %>
    </div>
        <% end %>
      </div>

      <!-- Tasks List -->
      <div class="space-y-2">
        <% @tasks.each do |task| %>
          <%= render partial: "task", locals: { task: task } %>
        <% end %>
      </div>
    <% end %>
    
  </div>
</div>